datasource db { provider = "postgresql" url      = env("DATABASE_URL") }

model Service { id       String   @id @default(cuid()) name     String description String }

model CaseStudy { id       String   @id @default(cuid()) title    String description String client   String result   String }

model BlogPost { id       String   @id @default(cuid()) title    String content  String author  String publishedAt DateTime @default(now()) }

model TeamMember { id       String   @id @default(cuid()) name     String position String bio      String }

model Inquiry { id       String   @id @default(cuid()) name     String email    String message  String responded Boolean @default(false) }

model User { id       String   @id @default(cuid()) email    String password String role     Role @default(USER) }

enum Role { USER ADMIN }